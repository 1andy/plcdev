@model SharedLayoutViewModel
@{
    Model.ActiveTab = "products";
    Layout = "../Shared/_Layout.cshtml";
}
@section head{
    @RenderSection("head", false)
}
@section subnav{
    <div@(Model.ActiveSubnav == "add" ? " class=active" : string.Empty)>
        @Html.ActionLink("Add new product", "Add", "Products")
    </div>
    <span class="delim">|</span>
    <form@(Model.ActiveSubnav == "index" ? " class=active" : string.Empty) action="@Url.Action("Index", "Products")">
    <span class="text">Search products for</span>
    @Html.TextBox("q")
    <input type="submit" value="Search" />
    </form>
    <span class="delim">|</span>
    <div@(Model.ActiveSubnav == "search" ? " class=active" : string.Empty)>
        @Html.ActionLink("Advanced Search", "Search", "Products")
    </div>
    <span class="delim">|</span>
    <div@(Model.ActiveSubnav == "categories" ? " class=active" : string.Empty)>
        @Html.ActionLink("Manage Categories", string.Empty, "Categories")
    </div>
}
@RenderBody()
